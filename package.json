{
  "name": "minimax-tateti",
  "version": "1.0.0",
  "description": "Servidor de tatet√≠ con algoritmo Minimax y pruebas completas",
  "main": "Minimax.js",
  "scripts": {
    "start": "node Minimax.js",
    "start:optimized": "node minimaxOptimizado.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:basic": "jest test/minimax.test.js",
    "test:advanced": "jest test/minimax.advanced.test.js",
    "test:all": "jest test/minimax.test.js test/minimax.advanced.test.js",
    "test:silent": "jest --silent",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear": "jest --clearCache",
    "test:update": "jest --updateSnapshot",
    "benchmark": "jest test/minimax.advanced.test.js --testNamePattern='Benchmarking'",
    "lint": "echo 'No linter configured yet'",
    "dev": "nodemon Minimax.js",
    "clean": "rm -rf coverage node_modules package-lock.json",
    "reinstall": "npm run clean && npm install"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/test/**/*.test.js"],
    "collectCoverageFrom": [
      "test/MinimaxLogic.js",
      "!**/node_modules/**",
      "!**/test/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "verbose": true,
    "testTimeout": 10000
  },
  "keywords": ["minimax", "tateti", "tic-tac-toe", "ai", "algorithm"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  }
}